<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration: No cleartext traffic, system certificates only -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!--
      Pinning rotation policy:
      - Keep at least 3 pins per domain (active leaf/intermediate + next/backup CA).
      - Always overlap old and new pins for >= 1 full release cycle before removal.
      - Expiration dates are guardrails; real rotation schedule is documented in docs/security/pin_rotation.md.
    -->

    <!-- Google AI API with certificate pinning -->
    <domain-config>
        <domain includeSubdomains="true">generativelanguage.googleapis.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
        <pin-set expiration="2027-06-30">
            <!-- Active chain pins -->
            <pin digest="SHA-256">ePd8DjIPDZVBxKmWbWHXy+wZjO75a6PEiRzXE7mbzZ0=</pin>
            <pin digest="SHA-256">YPtHaftLw6/0vnc2BnNKGF54xiCA28WFcccjkA4ypCM=</pin>
            <!-- Overlap/backup pin kept during rotation window -->
            <pin digest="SHA-256">hxqRlPTu1bMS/0DITB1SSu0vd4u/8l8TjPgfaAp63Gc=</pin>
        </pin-set>
    </domain-config>

    <!-- OpenRouter API with certificate pinning -->
    <domain-config>
        <domain includeSubdomains="true">openrouter.ai</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
        <pin-set expiration="2027-06-30">
            <!-- Active chain pins -->
            <pin digest="SHA-256">2ETytvFJ0SYiiaUyT3xMrJ3Yuen/K58SNiB87YChuRg=</pin>
            <pin digest="SHA-256">kIdp6NNEd8wsugYyyIYFsi1ylMCED3hZbSR8ZFsa/A4=</pin>
            <!-- Overlap/backup pin kept during rotation window -->
            <pin digest="SHA-256">mEflZT5enoR1FuXLgYYGqnVEoZvmf9c2bVBpiOjYQ0c=</pin>
        </pin-set>
    </domain-config>

    <!-- Debug configuration for testing (only in debug builds) -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
