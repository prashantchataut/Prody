<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration: No cleartext traffic, system certificates only -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Google AI API with certificate pinning -->
    <domain-config>
        <domain includeSubdomains="true">generativelanguage.googleapis.com</domain>
        <trust-anchors>
            <certificates src="system" />
            <!-- Certificate pinning for Google AI API -->
        </trust-anchors>
        <!-- Pin the certificate to prevent MITM attacks -->
        <pin-set>
            <pin digest="SHA-256">GThRnpaJ1x8I2c4e8p5h6k7l8m9n0o1p2q3r4s5t6u8=</pin>
            <!-- Backup pin for certificate rotation -->
            <pin digest="SHA-256">Y1a2b3c4d5e6f7g8h9i0j1k2l3m4n5o6p7q8r9s0t1u=</pin>
        </pin-set>
    </domain-config>
    
    <!-- OpenRouter API with certificate pinning -->
    <domain-config>
        <domain includeSubdomains="true">openrouter.ai</domain>
        <trust-anchors>
            <certificates src="system" />
            <!-- Certificate pinning for OpenRouter API -->
        </trust-anchors>
        <!-- Pin the certificate to prevent MITM attacks -->
        <pin-set>
            <pin digest="SHA-256">H2i3j4k5l6m7n8o9p0q1r2s3t4u5v6w7x8y9z0a1b2c=</pin>
            <!-- Backup pin for certificate rotation -->
            <pin digest="SHA-256">Z2b3c4d5e6f7g8h9i0j1k2l3m4n5o6p7q8r9s0t1u2v=</pin>
        </pin-set>
    </domain-config>
    
    <!-- Debug configuration for testing (only in debug builds) -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
