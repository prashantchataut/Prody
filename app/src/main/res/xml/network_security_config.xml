<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration: No cleartext traffic, system certificates only -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Google AI API with certificate pinning -->
    <domain-config>
        <domain includeSubdomains="true">generativelanguage.googleapis.com</domain>
        <trust-anchors>
            <certificates src="system" />
            <!-- Certificate pinning for Google AI API -->
        </trust-anchors>
        <!-- Pin the certificate to prevent MITM attacks -->
    </domain-config>
    
    <!-- OpenRouter API with certificate pinning -->
    <domain-config>
        <domain includeSubdomains="true">openrouter.ai</domain>
        <trust-anchors>
            <certificates src="system" />
            <!-- Certificate pinning for OpenRouter API -->
        </trust-anchors>
        <!-- Pin the certificate to prevent MITM attacks -->
    </domain-config>
    
    <!-- Debug configuration for testing (only in debug builds) -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
