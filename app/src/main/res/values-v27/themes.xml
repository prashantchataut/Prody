<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme for API 27+ (Android 9.0+) with enhanced Material Design support -->
    <style name="Theme.Prody" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="colorOnPrimary">@color/prody_on_primary</item>
        <item name="colorPrimary">@color/prody_primary</item>
        <item name="colorOnSurface">@color/prody_on_surface</item>
        <item name="colorOnBackground">@color/prody_on_background</item>
        <item name="colorPrimaryVariant">@color/prody_primary_variant</item>
        <item name="colorOnPrimaryContainer">@color/prody_on_primary</item>
        <item name="colorSecondary">@color/prody_secondary</item>
        <item name="colorOnSecondary">@color/prody_on_secondary</item>
        <item name="colorSecondaryContainer">@color/prody_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/prody_on_secondary</item>
        <item name="colorSurface">@color/prody_surface</item>
        <item name="colorOnSurfaceVariant">@color/prody_on_surface_variant</item>
        <item name="colorError">@color/prody_error</item>
        <item name="colorOnError">@color/prody_on_error</item>
        <item name="colorErrorContainer">@color/prody_error_container</item>
        <item name="colorOnErrorContainer">@color/prody_error</item>
        <item name="colorOutline">@color/prody_outline</item>
    </style>

    <style name="Theme.Prody.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Prody</item>
    </style>

</resources>